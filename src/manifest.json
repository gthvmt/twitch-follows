{
  "manifest_version": 3,
  "name": "Twitch follows",
  "version": "0.1.0",
  "description": "Shows you what accounts an account follows and shit",
  "permissions": [
    "webRequest",
    "cookies"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "api.js",
        "main.js"
      ],
      "css": [
        "css/usercard.css",
        "css/tab.css",
        "css/progress.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html/usercard.html",
        "html/tab.html",
        "html/follow-button.html",
        "html/unfollow-button.html",
        "html/massfollow-button.html",
        "hook-fetch.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}